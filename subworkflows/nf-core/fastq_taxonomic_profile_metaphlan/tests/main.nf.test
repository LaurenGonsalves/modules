    name "Test Subworkflow FASTQ_TAXONOMIC_PROFILE_METAPHLAN"
    script "../main.nf"
    workflow "FASTQ_TAXONOMIC_PROFILE_METAPHLAN"
    config "./nextflow.config"

    tag "subworkflows"
    tag "subworkflows_nfcore"
    tag "subworkflows/fastq_taxonomic_profile_metaphlan"
