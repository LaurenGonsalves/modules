nextflow_process {

    name "Test Process KNEADDATA_DOWNLOADDB"
    script "../main.nf"
    process "KNEADDATA_DOWNLOADDB"

    tag "modules"
    tag "modules_local"
    tag "kneaddata"
    tag "kneaddata/downloaddb"

    test(" kneaddata_db_type = 'human_genome' ") {

        when {
            params {
                kneaddata_db_type = 'human_genome'
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test(" kneaddata_db_type = 'human_genome' - stub") {

        options "-stub"

        when {
            params {
                kneaddata_db_type = 'human_genome'
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
