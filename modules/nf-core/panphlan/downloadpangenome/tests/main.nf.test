nextflow_process {

    name "Test Process PANPHLAN_DOWNLOADPANGENOME"
    script "modules/local/panphlan/downloadpangenome.nf"
    process "PANPHLAN_DOWNLOADPANGENOME"

    test("Should run without failures") {

        when {

            process {
                """
                input[0] = "Bacteroides_fragilis"
                """
            }
        }

        then {
            assertAll (
            { assert process.success },
            { assert snapshot(process.out).match() }
            )
        }

    }

}