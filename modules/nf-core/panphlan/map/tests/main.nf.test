nextflow_process {

    name "Test Process PANPHLAN_MAP"
    script "modules/local/panphlan/map.nf"
    process "PANPHLAN_MAP"

    test("Should run without failures") {

        when {
            process {
                """
                input[0] = PANPHLAN_DOWNLOADPANGENOME.out.pangenome
                input[1] = Channel.of (
                    [
                    PANPHLAN_DOWNLOADPANGENOME.out.indexes
                    ]
                )
                input[2] = Channel.of (
                    [
                    [id:"test1_1", single_end:true ],
                            file("https://github.com/nf-core/test-datasets/raw/modules/data/genomics/prokaryotes/bacteroides_fragilis/illumina/fastq/test1_1.fastq.gz")
                    ]
                )
                input[3] = "Bacteroides_fragilis"


                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}